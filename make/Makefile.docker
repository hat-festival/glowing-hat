include make/Makefile.common

PIHOST = hatlights.local

default: format lint test

push-code:
	rsync --archive \
		  --verbose \
		  --delete \
		  --exclude .git \
		  --exclude coverage \
		  . \
		  pi@${PIHOST}:${PROJECT}

test:
	PYTHONDONTWRITEBYTECODE=1 \
		python -m pytest \
		--random-order \
		--verbose \
		--capture no \
		--failed-first \
		--cov \
		--exitfirst 
		
lint:
	python -m pylama

clean:
	@find . -name __pycache__ -exec rm -fr {} \;
	@find . -name .pytest_cache -exec rm -fr {} \;

format: isort black

black:
	black .

isort:
	isort .
